<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:UI.ViewModels"
		mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
		Width="300" Height="300" WindowStartupLocation="CenterOwner" CanResize="False"
        x:Class="UI.Views.DigitsDatasetWindow"
        Title="Набор данных">

	<Design.DataContext>
		<vm:DigitsDatasetVM />
	</Design.DataContext>

	<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
		<Label Grid.Row="0" Content="{Binding Info}" />
		<Label Grid.Row="1" Content="{Binding Index}" />

		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button Name="btnPlus" Command="{Binding PlusCommand}">+</Button>
			<Button Name="btnMinus" Command="{Binding MinusCommand}">-</Button>
		</StackPanel>

		<Image Grid.Row="3" 
			   Width="{Binding ImageWidth}" 
			   Height="{Binding ImageHeight}" 
			   Source="{Binding ImageSource}" />
		<Label Grid.Row="4" Content="{Binding Label}" />
	</Grid>

</Window>
