<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="30"
			 Height="30"
             x:Class="UI.Views.MessageUC">
	<Grid ColumnDefinitions="50,*,50" Background="Khaki">
		<TextBlock Grid.Column="1" Name="tbMessage" VerticalAlignment="Center" />
		<Button Content="X" Grid.Column="2" Click="OnClose_Click"></Button>
	</Grid>
</UserControl>
