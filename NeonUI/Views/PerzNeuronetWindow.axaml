<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NeonUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NeonUI.Views.PerzNeuronetWindow"
		Width="800" Height="450" WindowStartupLocation="CenterOwner"
        Title="PerzNeuronetWindow">
	<Design.DataContext>
		<vm:PerzNeuronetVM />
	</Design.DataContext>

	<TabControl>
		<TabItem Header="Сеть">
			<Grid ColumnDefinitions="*,*,*" RowDefinitions="50, 50, 50, 50">
				<Label Grid.Row="0" Grid.Column="0" Content="Слои:"></Label>
				<Label Grid.Row="0" Grid.Column="1" Content="{Binding LayerSizes}"></Label>

				<Label Grid.Row="1" Grid.Column="0" Content="Набор данных:"></Label>
				<ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding DatasetItems}" SelectedItem="{Binding SelectedDataset}"></ComboBox>
				<Button Grid.Row="1" Grid.Column="2" Command="{Binding ExecuteCurrentCommand}">Распознать текущий элемент</Button>

				<TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ExecuteCurrentResult}"></TextBlock>

				<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
					<ComboBox ItemsSource="{Binding DataKeyItems}" SelectedItem="{Binding SelectedDataKey}"></ComboBox>
					<Button Command="{Binding ViewDataCommand}">Показать данные</Button>
				</StackPanel>

			</Grid>
		</TabItem>
		
		<TabItem Header="Тренировка">
			<Grid ColumnDefinitions="200,*" RowDefinitions="Auto, Auto, Auto">
				<Label Grid.Row="0" Grid.Column="0" Content="Набор данных:"></Label>
				<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
					<ComboBox ItemsSource="{Binding TrainDatasetItems}" SelectedItem="{Binding SelectedTrainDataset}"></ComboBox>
				</StackPanel>

				<Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding TrainEpochCommand}">Старт эпохи</Button>

				<StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
					<TextBox Text="{Binding SaveAsNetworkName}"></TextBox>
					<Button Command="{Binding SaveAsNetworkCommand}">Сохранить как</Button>
				</StackPanel>
			</Grid>

		</TabItem>
		<TabItem Header="Тестирование"></TabItem>
	</TabControl>
</Window>
