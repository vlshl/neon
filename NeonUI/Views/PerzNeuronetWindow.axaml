<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:NeonUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NeonUI.Views.PerzNeuronetWindow"
		Width="800" Height="450" WindowStartupLocation="CenterOwner"
        Title="Перцептрон">
	<Design.DataContext>
		<vm:PerzNeuronetVM />
	</Design.DataContext>

	<TabControl>
		<TabItem Header="Сеть">
			<Grid ColumnDefinitions="*,*,*" RowDefinitions="50, 50, 50, 50">
				<Label Grid.Row="0" Grid.Column="0" Content="Слои:"></Label>
				<Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="{Binding LayerSizes}"></Label>

				<Label Grid.Row="1" Grid.Column="0" Content="Набор данных:"></Label>
				<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
					<ComboBox ItemsSource="{Binding DatasetItems}" SelectedItem="{Binding SelectedDatasetItem}" Width="200" />
					<Button Command="{Binding RefreshDatasetItemsCommand}" Margin="5, 0, 0, 0" >
						<Image Source="avares://NeonUI/Assets/refresh.png" Width="16" Height="16" />
					</Button>
				</StackPanel>
				
				<Button Grid.Row="1" Grid.Column="2" Command="{Binding ExecuteCurrentCommand}">Распознать текущий элемент</Button>

				<Label Grid.Row="2" Grid.Column="0" Content="Результат:"></Label>
				<Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Content="{Binding ExecuteCurrentResult}"></Label>

				<Label Grid.Row="3" Grid.Column="0" Content="Внутренние данные:"></Label>
				<StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
					<ComboBox ItemsSource="{Binding DataKeyItems}" SelectedItem="{Binding SelectedDataKey}" />
					<Button Command="{Binding ViewDataCommand}" Margin="5,0,0,0">Показать</Button>
				</StackPanel>
			</Grid>
		</TabItem>
		
		<TabItem Header="Тренировка">
			<Grid ColumnDefinitions="*,2*" RowDefinitions="50, 50, 50">
				<Label Grid.Row="0" Grid.Column="0" Content="Набор данных:"></Label>
				<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
					<ComboBox ItemsSource="{Binding TrainDatasetItems}" SelectedItem="{Binding SelectedTrainDatasetItem}" Width="200"></ComboBox>
					<Button Command="{Binding RefreshDatasetItemsCommand}" Margin="5, 0, 0, 0" >
						<Image Source="avares://NeonUI/Assets/refresh.png" Width="16" Height="16" />
					</Button>
				</StackPanel>

				<Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding TrainEpochCommand}">Старт эпохи</Button>

				<StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
					<TextBox Text="{Binding SaveAsNetworkName}"></TextBox>
					<Button Command="{Binding SaveAsNetworkCommand}">Сохранить как</Button>
				</StackPanel>
			</Grid>
		</TabItem>

		<TabItem Header="Тестирование">
			<Grid ColumnDefinitions="*,2*" RowDefinitions="50, 50, Auto">
				<Label Grid.Row="0" Grid.Column="0" Content="Набор данных:"></Label>
				<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
					<ComboBox ItemsSource="{Binding TestDatasetItems}" SelectedItem="{Binding SelectedTestDatasetItem}" Width="200"></ComboBox>
					<Button Command="{Binding RefreshDatasetItemsCommand}" Margin="5, 0, 0, 0" >
						<Image Source="avares://NeonUI/Assets/refresh.png" Width="16" Height="16" />
					</Button>
				</StackPanel>

				<Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding TestCommand}">Старт теста</Button>

				<Label Grid.Row="2" Grid.Column="0" Content="Результаты теста:"></Label>
				<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TestResult}" Width="500" Height="250" 
						 IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="Wrap" FontFamily="Courier New"></TextBox>
			</Grid>
		</TabItem>
	</TabControl>
</Window>
